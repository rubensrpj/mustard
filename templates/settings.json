{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/enforce-pipeline.js",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Grep|Glob",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/enforce-grepai.js",
            "timeout": 5
          }
        ]
      }
    ]
  },

  "statusLine": {
    "type": "command",
    "command": "node .claude/scripts/statusline.js"
  }
}
